//CLASES GLOBALES
//font-family 'Titillium Web', sans-serif
cross(prop,valor)
	-webkit-{prop} valor
	-moz-{prop} valor
	-o-{prop} valor
	-ms-{prop} valor
	{prop} valor

degradado(color1,color2)
	background -moz-linear-gradient(color1, color2)
	background -webkit-linear-gradient(color1, color2)
	background -o-linear-gradient(color1, color2)
	background -ms-linear-gradient(color1, color2)
	background linear-gradient(color1, color2)

transition(estilo=all,time=0.5s)
	-moz-transition: estilo time
	-webkit-transition: estilo time
	-o-transition: estilo time
	-ms-transition: estilo time
	transition: estilo time

radius(px=100px)
	-moz-border-radius px
	-webkit-border-radius px
	-o-border-radius px
	-ms-border-radius px
	border-radius px

